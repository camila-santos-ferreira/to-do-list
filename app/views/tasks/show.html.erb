<% flash.each do |type, message| %>
  <div class="alert <%= type == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert" id="taskAlert">
    <%= message %>
  </div>
<% end %>
<div class="row mt-4">
  <div class="col">
    <%= link_to root_path, method: :get, class: "btn btn-danger" do %>
      <i class="fa-solid fa-left-long"></i>
      <span>Voltar</span>
    <% end %>
  </div>
</div>
<div class="row mt-4">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">#<%= @task.id %></h5>
        <h6 class="card-text <%= @task.done? ? 'text-line-through' : '' %>"><%= @task.name %></h6>
      </div>
      <div class="card-footer text-muted">
        <%= link_to task_path(@task), data: { method: :delete, confirm: 'Tem certeza que deseja apagar a tarefa?' }, class: "btn btn-danger btn-show" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        <%= link_to edit_task_path(@task), class: "btn btn-dark btn-show #{ 'disabled' if @task.done? }" do %>
          <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
        <%= link_to done_task_path(id: @task.id),  method: :put, class: "btn btn-success btn-show #{ 'disabled' if @task.done? }" do %>
          <i class="fa-solid fa-check"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
