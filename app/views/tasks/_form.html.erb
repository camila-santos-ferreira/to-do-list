<div class="row mt-4">
  <div class="col">
    <%= link_to root_path, method: :get, class: "btn btn-danger" do %>
      <i class="fa-solid fa-left-long"></i>
      <span>Voltar</span>
    <% end %>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <h2>
      <%= task_action %> <%= task.id.present? ? "##{task.id}" : '' %>
    </h2>
  </div>
</div>
<div class="row mt-2">
  <div class="col">
    <%= form_with model: task do |form| %>
      <div class="mb-3">
        <%= form.text_area :name, class:'form-control', placeholder:'Escreva o nome da tarefa' %>
        <% task.errors.full_messages_for(:name).each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
      <div class="col-auto">
        <%= form.submit task_button, class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
